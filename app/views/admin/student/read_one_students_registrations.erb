<h3>Add Scores for <a href="/read/student/<%=@student.id%>">
<%=@student.first_name%> <%=@student.last_name%></a>:</h3>
<br>   
<table border="1">
  <thead>
      <th>Event</th>
      <th>Add Score</th>
  </thead>

  <tbody>
      <tr>
        <%if @results == []%>
          <td>No Events To Score </td>
        <%else @results.each do |r| %>
          <td><a href="/read/activity/<%=r.activity_id%>"><%= r.access_event.event_name %></a></td>
          <td><a href="/result/update/<%=r.id%>">Add Score</a></td>
      </tr>
            <%end%>
          <%end%>
      
  </tbody>
</table>

<%if @activities == []%>
  <h3><a href="/read/student/<%=@student.id%>"><%=@student.first_name%> <%=@student.last_name%></a> is already registered for all activities.</h3>

<%else%>

  <h3>Register <a href="/read/student/<%=@student.id%>">
  <%=@student.first_name%> <%=@student.last_name%></a> for more events:</h3>
  <br>   
    <form method="post" action="/result/create/<%=@student.id%>">
        <%@activities.each do |a|%>
      <input type="checkbox" name="activity_ids[]" value="<%=a.id%>">
      <%=a.event_name%><br>
        <%end%><br>
      <input type="submit" value="Register">
    </form>

<%end%>









  